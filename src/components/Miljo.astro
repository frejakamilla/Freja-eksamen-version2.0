<style>
  #purely-miljo {
    width: 100vw;
    height: fit-content;
    background-color: var(lightSand);
    padding: 38px 15px;
  }
  #scroll_div {
    display: flex;
    gap: 22px;
    margin-top: 42px;
    overflow-x: scroll;
    overflow-y: hidden;
    height: fit-content;
  }

  .miljo-title {
    text-transform: uppercase;
    text-align: center;
    letter-spacing: 2px;
  }
  .miljo_billede {
    display: grid;
    grid-template-columns: 1fr;
  }

  .miljo_billede img,
  .miljo_billede div {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    grid-area: 1/2/1/2;
  }
  .miljo_billede div {
    background-color: rgba(164, 149, 126, 0.5);
  }

  .miljo_div {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: fit-content;
    padding-top: 10px;
  }
  .miljo_div:hover .miljo_billede div {
    background-color: var(--mediumOcean);
  }

  .miljo_div:hover .miljo-title {
    font-weight: 600;
  }

  @media (min-width: 900px) {
    #finhaertype {
      background-color: var(--mediumOcean);
      margin-top: 110px;
    }
    #miljo_billede {
      width: 250px;
      height: 250px;
    }
    .miljo_div {
      margin-left: 15px;
      gap: 27px;
    }
  }

  @media (min-width: 1200px) {
    .miljo_billede img,
    .miljo_billede div {
      width: 340px;
      height: 340px;
    }
  }
</style>
